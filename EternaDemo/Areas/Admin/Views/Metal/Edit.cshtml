@model EternaDemo.Models.Metal

@{
    ViewBag.Title = "Edit Metal";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-cpu me-2"></i>Edit Metal</h4>
            <a href="@Url.Action("Index")" class="btn btn-outline-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body bg-light">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, "Metal Name", htmlAttributes: new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control rounded-3" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Purity, "Purity (%)", htmlAttributes: new { @class = "form-label fw-semibold" })
                            @Html.EditorFor(model => model.Purity, new { htmlAttributes = new { @class = "form-control rounded-3" } })
                            @Html.ValidationMessageFor(model => model.Purity, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success px-4 fw-semibold">
                        <i class="bi bi-check-circle me-1"></i> Save Changes
                    </button>
                </div>
            }
        </div>
    </div>
</div>
