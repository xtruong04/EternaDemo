@model EternaDemo.Models.Product

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-box-seam me-2"></i> Product Details</h4>
            <div>
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-light btn-sm me-2">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a href="@Url.Action("Index")" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>

        <div class="card-body bg-light">
            <div class="row gy-3">
                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-tag"></i> Name</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Name</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-link-45deg"></i> Alias</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Alias</p>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="p-3 bg-white rounded-3 shadow-sm">
                        <h6 class="text-muted mb-2"><i class="bi bi-card-text"></i> Description</h6>
                        <p class="text-dark mb-0">@Model.Description</p>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-gem"></i> Gemstone</h6>
                        <p class="fw-semibold mb-0">@Model.Gemstone.Name</p>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-award"></i> Certificate</h6>
                        <p class="fw-semibold mb-0">@Model.Certificate.Type</p>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-inboxes"></i> Category</h6>
                        <p class="fw-semibold mb-0">@Model.Category.Name</p>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-cpu"></i> Metal</h6>
                        <p class="fw-semibold mb-0">@Model.Metal.Name</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-cash-stack"></i> Price (VNĐ)</h6>
                        <p class="fw-semibold text-success fs-5 mb-0">
                            @string.Format("{0:N0}", Model.Price) ₫
                        </p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-star"></i> Featured</h6>
                        <p class="fw-semibold mb-0">
                            @if (Model.IsFeatured)
                            {
                                <span class="badge bg-success px-3 py-2"><i class="bi bi-check-circle me-1"></i> Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2"><i class="bi bi-dash-circle me-1"></i> No</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
