@model IEnumerable<EternaDemo.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-box-seam"></i> List Products
        </h2>
        @Html.ActionLink("➕ Create New", "Create", null, new { @class = "btn btn-success fw-semibold" })
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Category</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Gemstone</th>
                        <th>Certificate</th>
                        <th>Metal</th>
                        <th>Alias</th>
                        <th>Featured</th>
                        <th>Price (₫)</th>
                        <th scope="col" class="text-center" style="width: 180px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.Category?.Name ?? "-")</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@(item.Gemstone?.Name ?? "-")</td>
                            <td>@(item.Certificate?.Type ?? "-")</td>
                            <td>@(item.Metal?.Name ?? "-")</td>
                            <td>@item.Alias</td>
                            <td class="text-primary">
                                @if (item.IsFeatured)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td class="text-end">@string.Format("{0:N0}", item.Price)</td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info me-1 text-white">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

