@model EternaDemo.Models.Gemstone

@{
    ViewBag.Title = "Gemstone Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-gem me-2"></i> Gemstone Details</h4>
            <div>
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-light btn-sm me-2">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a href="@Url.Action("Index")" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>

        <div class="card-body bg-light">
            <div class="row gy-3">
                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-tag"></i> Name</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Name</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-scissors"></i> Cut</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Cut</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-brightness-high"></i> Clarity</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Clarity</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-palette"></i> Color</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Color</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-layers-half"></i> Carat</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Carat</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-geo-alt"></i> Origin</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Origin</p>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-droplet-half"></i> Treatment</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Treatment</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
