@model IEnumerable<EternaDemo.Models.Gemstone>

@{
    ViewBag.Title = "Gemstones";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; // dùng layout chính của bạn
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-gem"></i> List Gemstones
        </h2>
        @Html.ActionLink("➕ Create New", "Create", null, new { @class = "btn btn-success fw-semibold" })
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Cut</th>
                        <th scope="col">Clarity</th>
                        <th scope="col">Color</th>
                        <th scope="col">Carat</th>
                        <th scope="col">Origin</th>
                        <th scope="col">Treatment</th>
                        <th scope="col" class="text-center" style="width: 180px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cut)</td>
                            <td>@Html.DisplayFor(modelItem => item.Clarity)</td>
                            <td>@Html.DisplayFor(modelItem => item.Color)</td>
                            <td>@Html.DisplayFor(modelItem => item.Carat)</td>
                            <td>@Html.DisplayFor(modelItem => item.Origin)</td>
                            <td>@Html.DisplayFor(modelItem => item.Treatment)</td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info me-1 text-white">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
