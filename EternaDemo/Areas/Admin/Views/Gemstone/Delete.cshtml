@model EternaDemo.Models.Gemstone

@{
    ViewBag.Title = "Delete Gemstone";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-trash-fill me-2"></i> Delete Gemstone</h4>
            <a href="@Url.Action("Index")" class="btn btn-outline-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body bg-light">
            <div class="alert alert-warning d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                <div>
                    Are you sure you want to <strong>delete</strong> this gemstone? This action <strong>cannot be undone</strong>.
                </div>
            </div>

            <div class="row gy-3">
                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-tag"></i> Name</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Name</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-scissors"></i> Cut</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Cut</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-brightness-high"></i> Clarity</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Clarity</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-palette"></i> Color</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Color</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-layers-half"></i> Carat</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Carat</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-geo-alt"></i> Origin</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Origin</p>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-droplet-half"></i> Treatment</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Treatment</p>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-center mt-4">
                    <input type="submit" value="Delete" class="btn btn-danger px-4 me-2 fw-semibold" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary px-4">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
