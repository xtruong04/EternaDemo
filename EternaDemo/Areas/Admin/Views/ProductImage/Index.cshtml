@model IEnumerable<EternaDemo.Models.ProductImage>

@{
    ViewBag.Title = "Product Images";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-images"></i> Product Images
        </h2>
        @Html.ActionLink("➕ Add Product Image", "Create", null, new { @class = "btn btn-success fw-semibold" })
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center m-3">
                    <i class="bi bi-info-circle"></i> No product images found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Image</th>
                                <th scope="col">View 360</th>
                                <th scope="col" class="text-center" style="width:180px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Url))
                                        {
                                            <img src="@Url.Content(item.Url)" alt="Product Image" class="img-thumbnail shadow-sm" style="width:80px; height:80px; object-fit:cover;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">No image</span>
                                        }
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(item.View360Url))
                                        {
                                            <a href="@Url.Content(item.View360Url)" target="_blank" class="btn btn-outline-info btn-sm">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">N/A</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary me-1">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info me-1 text-white">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
