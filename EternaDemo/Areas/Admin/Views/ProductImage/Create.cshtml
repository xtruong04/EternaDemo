@model EternaDemo.Models.ProductImage

@{
    ViewBag.Title = "Create Product Image";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-image"></i> Create Product Image</h4>
            <a href="@Url.Action("Index", "ProductImage", new { area = "Admin" })" class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card-body px-5 py-4">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(model => model.ProductId, "Product", htmlAttributes: new { @class = "form-label fw-semibold" })
                    @Html.DropDownList("ProductId", null, htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "form-label fw-semibold" })
                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control", @id = "imageUrlInput", @placeholder = "Enter image URL..." } })
                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                    <div class="mt-3 text-center">
                        <img id="imagePreview" src="#" alt="Preview" class="img-thumbnail d-none shadow-sm" style="max-width: 200px; height: 200px; object-fit: cover;" />
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.View360Url, htmlAttributes: new { @class = "form-label fw-semibold" })
                    @Html.EditorFor(model => model.View360Url, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter 360 view URL..." } })
                    @Html.ValidationMessageFor(model => model.View360Url, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="card-footer bg-light d-flex justify-content-end">
                <input type="submit" value="Create" class="btn btn-success fw-semibold" />
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Preview image when typing or pasting URL
        const imageUrlInput = document.getElementById("imageUrlInput");
        const imagePreview = document.getElementById("imagePreview");

        imageUrlInput.addEventListener("input", function () {
            const url = this.value.trim();
            if (url) {
                imagePreview.src = url;
                imagePreview.classList.remove("d-none");
            } else {
                imagePreview.classList.add("d-none");
                imagePreview.src = "#";
            }
        });
    </script>
}
