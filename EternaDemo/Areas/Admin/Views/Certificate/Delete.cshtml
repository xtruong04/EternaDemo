@model EternaDemo.Models.Certificate

@{
    ViewBag.Title = "Delete Certificate";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <!-- Header -->
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0">
                <i class="bi bi-trash3 me-2"></i> Delete Certificate
            </h4>
            <a href="@Url.Action("Index")" class="btn btn-outline-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        <!-- Body -->
        <div class="card-body bg-light">
            <div class="alert alert-warning border-0 rounded-3 shadow-sm">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Are you sure you want to delete this certificate?</strong>
            </div>

            <div class="row gy-3">
                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-gem"></i> Gemstone</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Gemstone.Name</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-type"></i> Type</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Type</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-hash"></i> Number</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.Number</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-calendar-event"></i> Issue Date</h6>
                        <p class="fw-semibold mb-0 text-dark">@Model.IssueDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-3 bg-white rounded-3 shadow-sm h-100">
                        <h6 class="text-muted mb-2"><i class="bi bi-file-earmark-arrow-up"></i> File</h6>
                        @if (!string.IsNullOrEmpty(Model.FileUrl))
                        {
                            <a href="@Model.FileUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-box-arrow-up-right me-1"></i> View File
                            </a>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No file available</span>
                        }
                    </div>
                </div>
            </div>

            <!-- Confirm delete -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-trash3-fill me-1"></i> Delete
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary px-4">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            }
        </div>
    </div>
</div>
