    <!-- Button trigger modal -->
    <script>
        function ShowModal(id) {
            $.ajax({
                url: '/products/GetDetail/' + id, // The URL of the API endpoint
                method: 'GET', // The HTTP method (GET, POST, PUT, DELETE, etc.)
                // The expected data type of the response (e.g., 'json', 'xml', 'html', 'text')
                success: function (data) {
                    $("#exampleModal").show();
                    $(".modal-backdrop.fade.show").show();
                    $("#exampleModal").html(data)
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    // This function is executed if the request fails
                    console.error('API call failed:', textStatus, errorThrown);
                    // Handle the error here
                },
                complete: function () {
                    // This function is executed regardless of success or failure
                    console.log('API call completed.');
                }
            });
        }
        function CloseModal() {
            $("#exampleModal").hide();
            $(".modal-backdrop.fade.show").hide();
            // thì thêm đoạn này để đảm bảo scroll luôn được bật lại khi hide()
            $('body').removeClass('modal-open');
            $('.modal-backdrop').remove();
            $('body').css('overflow', 'auto');
        }
    </script>
