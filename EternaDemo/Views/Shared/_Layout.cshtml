    <script>
        $(document).on('click', '.js-show-modal1', function (e) {
            e.preventDefault();
            var productId = $(this).data('id');

            $.get("/Products/QuickView/" + productId, function (html) {
                const content = $(html).find('.quick-view-content');
                if (content.length > 0) {
                    $(".js-modal1").empty().append(content).fadeIn().addClass("show-modal1");
                } else {
                    console.warn("Không tìm thấy .quick-view-content trong HTML");
                }
            }).fail(function (err) {
                console.error("Lỗi khi load QuickView:", err);
            });
        });

        $(document).on('click', '.js-hide-modal1', function () {
            $(".js-modal1").fadeOut().removeClass("show-modal1");
        });
    </script>
